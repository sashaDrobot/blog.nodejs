<!-- Sidebar Widgets Column -->
<div class="col-md-4">

    <!-- Login -->
    <div class="card my-4 login">
        <h5 class="card-header">Вход</h5>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label for="login-login">Логин</label>
                    <input type="text" name="login" class="form-control" id="login-login"
                           placeholder="Enter login">
                </div>
                <div class="form-group">
                    <label for="login-password">Пароль</label>
                    <input type="password" name="password" class="form-control" id="login-password"
                           placeholder="Password">
                </div>
                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-default switch-btn">Регистрация</button>
                    <button type="submit" class="btn btn-primary login-btn">Войти</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card my-4 register">
        <h5 class="card-header">Регистрация</h5>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label for="register-login">Логин</label>
                    <input type="text" name="login" class="form-control" id="register-login"
                           placeholder="Enter login">
                </div>
                <div class="form-group">
                    <label for="register-password">Пароль</label>
                    <input type="password" name="password" class="form-control" id="register-password"
                           placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="register-password-confirm">Повторите пароль</label>
                    <input type="password" name="passwordConfirm" class="form-control" id="register-password-confirm"
                           placeholder="Confirm password">
                </div>
                <div class="form-group d-flex justify-content-between">
                    <button type="submit" class="btn btn-default switch-btn">Вход</button>
                    <button type="submit" class="btn btn-primary register-btn">Регистрация</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Side Widget -->
    <div class="card my-4">
        <h5 class="card-header">Side Widget</h5>
        <div class="card-body">
            You can put anything you want inside of these side widgets. They are easy to use, and feature the
            new Bootstrap 4 card containers!
        </div>
    </div>

</div>